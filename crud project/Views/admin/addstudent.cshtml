@{
}

@model crud_project.Models.student


<section class="borrowhome">
    <div class="card col-6">
        <div class="card-body">
            <form asp-controller="admin" asp-action="addstudent">
                <div class="form-group my-3">
                    <label class="pb-1">Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group my-3">
                    <label class="pb-1">Email</label>
                    <input type="text" class="form-control" name="email">
                </div>

                <button name="send" class="btn"><a>Add student</a></button>
                <button type="submit" name="back" class="btn"><a asp-controller="admin" asp-action="index">Back</a></button>
            </form>
        </div>
    </div>

</section>
