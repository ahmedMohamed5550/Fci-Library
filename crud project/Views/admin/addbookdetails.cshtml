@{
}
@model crud_project.Models.bookauthor

<section class="borrowhome">
    <div class="card col-6">
        <div class="card-body">
            <form asp-controller="admin" asp-action="addbookdetails">
                <div class="form-group my-3">
                    <label class="pb-1">Book Name</label>
                    <select asp-for="bookid" class="form-control" asp-items="ViewBag.bookid"></select>
                </div>
                <div class="form-group my-3">
                    <label class="pb-1">Book Author</label>
                    <select asp-for="authorid" class="form-control" asp-items="ViewBag.authorid"></select>
                </div>
                <div class="form-group my-3">
                    <label class="pb-1">Book category</label>
                    <select asp-for="categoryid" class="form-control" asp-items="ViewBag.categoryid"></select>
                </div>

                <button name="send" class="btn"><a>Send Book</a></button>
                <button type="submit" name="back" class="btn"><a asp-controller="admin" asp-action="index">Back</a></button>
            </form>
        </div>
    </div>

</section>
