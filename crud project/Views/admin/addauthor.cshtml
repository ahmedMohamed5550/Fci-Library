@{
}
@model crud_project.Models.author

<section class="borrowhome">
    <div class="card col-6">
        <div class="card-body">
            <form asp-controller="admin" asp-action="addauthor" enctype="multipart/form-data">
                <div class="form-group my-3">
                    <label class="pb-1">Name</label>
                    <input type="text" class="form-control" name="Name">
                </div>
                <div class="form-group my-3">
                    <label class="pb-1">Age</label>
                    <input class="form-control" name="age">
                </div>
                <div class="form-group my-3">
                    <label class="pb-1">Email</label>
                    <input type="text" class="form-control" name="Email">
                </div>
                <div class="form-group my-3">
                    <label class="pb-1">Image</label>
                    <input type="file" class="form-control" name="img">
                </div>

                <button type="submit" name="send" class="btn"><a>Add Author</a></button>
                <button type="submit" name="back" class="btn"><a asp-controller="admin" asp-action="index">Back</a></button>
            </form>
        </div>
    </div>

</section>
