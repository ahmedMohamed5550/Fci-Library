@{
}
@model IEnumerable<author>

<section class="bookhome">

    <div class="container col-9">
        <div class="card">
            <div class="card-body text-center">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            
                            <th>email</th>
                            <th>Details</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @if (Model != null){
                    <tbody>
                        @foreach(var item in Model){
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                
                                <td>@item.Email</td>
                                
                                 <td><a asp-controller="admin" asp-action="showauthorprofile" asp-route-id="@item.Id" class="btn">Show</a></td>
                                <td><a onclick="return confirm('Are You Sure ?')" asp-controller="admin" asp-action="deleteauthor" asp-route-id="@item.Id" class="btn">Remove</a></td>
                            </tr>
                        }
                            
                    </tbody>
                    }




                </table>
                <button type="submit" name="back" class="btn px-3"><a asp-controller="admin" asp-action="index">Back</a></button>

                 

               
            </div>
            
        </div>

    </div>
</section>
