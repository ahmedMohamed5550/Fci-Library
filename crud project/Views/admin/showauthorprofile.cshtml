@model crud_project.Models.author

<section class="profile">
	

	<div class="container col-md-5">
		<h1 class="text-center mt-2 pt-2 ">Author profile</h1>
		@if (Model != null)
		{
			<div class="card">
				<img src="~/img/@Model.img" class="img-top" />
				<div class="card-body bg-dark">
					Name : @Model.Name
					<hr />
					Age : @Model.age
					<hr />
					Email : @Model.Email
					<hr />
					<a asp-controller="admin" asp-action="listauthor" class="btn">Back</a>
				</div>
			</div>
		}

	</div>
</section>
