@{
}

@model IEnumerable<category>

<section class="bookhome">

    <div class="container col-9">
        <div class="card">
            <div class="card-body text-center">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Category Name</th>
                            <th colspan="2">Action</th>
                        </tr>
                    </thead>


                    @if (Model != null)
                    {
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td><a asp-controller="admin" asp-action="editcategory" asp-route-id="@item.Id" class="btn">Edit</a></td>
                                    <td><a onclick="return confirm('Are You Sure ?')" class="btn" asp-controller="admin" asp-action="deletecategory" asp-route-id="@item.Id">Remove</a></td>
                                </tr>
                            }
                        </tbody>

                    }


                </table>
                <button type="submit" name="back" class="btn px-3"><a asp-controller="admin" asp-action="index">Back</a></button>

            </div>
        </div>


    </div>
</section>
