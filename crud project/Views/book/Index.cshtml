@{
}
@model IEnumerable<crud_project.Models.bookauthor>

<section class="bookhome">

    <div class="container col-9">
        <form asp-controller="book" asp-action="search">
            <div class="row my-3">
                <div class="col-md-10">
                    <div class="form-group">
                        <input name="value" class="form-control" type="text" placeholder="search">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" name="search" class="btn"><a>search</a></button>

                </div>
            </div>
        </form>
        <div class="card">
            <div class="card-body text-center">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Book Name</th>
                            
                            <th>Details</th>
                            <th>Borrow</th>
                            <th colspan="2">Action</th>
                        </tr>
                    </thead>
                    
                    
                        <tbody>
                        @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.Id</th>
                                    <th>@Html.DisplayFor(modelItem => item.Book.Name)</th>                                  
                                    <td><a asp-controller="book" asp-action="showbook" asp-route-id="@item.Id" class="btn">Show</a></td>
                                    <td><a asp-controller="book" asp-action="borrow" asp-route-id="@item.Id" class="btn">Borrow</a></td>
                                <td><a asp-controller="book" asp-action="edit" asp-route-id="@item.Id" class="btn">Edit</a></td>
                                <td><a onclick="return confirm('Are You Sure ?')" asp-controller="book" asp-action="deletebook" asp-route-id="@item.Id" class="btn">Remove</a></td>
                                </tr>
                            }
                        </tbody>

                    





                </table>
                
                
                <button type="submit" name="back" class="btn px-3"><a asp-controller="home" asp-action="index">Back</a></button>
            </div>
        </div>


    </div>
</section>
